/**
 * Demultiplexor:
 * {a, b} = {in, 0} if sel == 0
 *          {0, in} if sel == 1
 */

/** 
 * had to consult web :(
 * using truth table we can see the following makes sense
 * sel  in   a   b
 * 0    0    0   0
 * 0    1    1   0
 * 1    0    0   0
 * 1    1    0   1
 */

CHIP DMux {
    IN in, sel;
    OUT a, b;

    PARTS:
    Not(in=sel, out=nsel);
    And(a=nsel, b=in, out=a);
    And(a=sel, b=in, out=b);
}
